@model NetworkTreeWebApp.Models.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<h1 class="display-4">Accounts</h1>
<div>
    <form class="form" asp-action="Index" method="POST">
        <label>Add multiple standard</label>
        <input type="number" id="num-input" name="number" />
        <input type="text" id="prefix-input" name="prefix" />
        <input type="submit" />
    </form>
</div>
<div>
    <form class="form" asp-action="CreateHierarchyMulti" method="POST">
        <label>Add multiple hierarchy</label>
        <input type="number" id="h-num-input" name="number" />
        <input type="text" id="h-prefix-input" name="prefix" />
        <input type="submit" />
    </form>
</div>
<hr/>
<div>
    <form class="form" asp-action="CreateAccount" method="POST">
        <p>Add single standard</p>
        <input type="number" id="sp-input" name="sponsorId", placeholder="Sponsor ID" />
        <input type="text" id="nm-input" name="name" placeholder="Account name" />
        <input type="number" id="pref-input" name="placement" placeholder="Placement preference" />
        <input type="submit" />
    </form>
</div>
<div>
    <form class="form" asp-action="CreateHierarchy" method="POST">
        <p>Add single hierarchy</p>
        <input type="number" id="h-sp-input" name="sponsorId", placeholder="Sponsor ID" />
        <input type="text" id="h-nm-input" name="name" placeholder="Account name" />
        <input type="number" id="h-pref-input" name="placement" placeholder="Placement preference" />
        <input type="submit" />
    </form>
</div>
<div>
    @if(Model.Accounts.Count > 0)
    {
        <h4>Stats regular</h4>
        <p>Total accounts: @Model.CountRegular</p>
        <p>First: (id)@Model.Accounts[0].Id -- (name)@Model.Accounts[0].Name -- (parent)@Model.Accounts[0].ParentId --</p>
        <p>Last: (id)@Model.Accounts[Model.Accounts.Count-1].Id -- (name)@Model.Accounts[Model.Accounts.Count-1].Name -- (parent)@Model.Accounts[Model.Accounts.Count-1].ParentId</p>
    }
</div>
<div>
    @if(Model.AccountHierarchies.Count > 0)
    {
        <h4>Stats hierarchies</h4>
        <p>Total accounts: @Model.CountHierarchies</p>
        <p>First: (id)@Model.AccountHierarchies[0].Id -- (name)@Model.AccountHierarchies[0].Name -- (parent)@Model.AccountHierarchies[0].ParentId --</p>
        <p>Last: (id)@Model.AccountHierarchies[Model.AccountHierarchies.Count-1].Id -- (name)@Model.AccountHierarchies[Model.AccountHierarchies.Count-1].Name -- (parent)@Model.AccountHierarchies[Model.AccountHierarchies.Count-1].ParentId</p>
    }
</div>

@section Scripts{
    <script type="text/javascript" src="~/lib/bootstrap-treeview-1.2.0/dist/bootstrap-treeview.min.js"></script>
}